<%= form_with model: post, local: true do |f| %>
  <div class="form-group my-2 text-light">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group my-2 text-light">
    <%= f.label :twitter %>
    <%= f.text_field :twitter, class: 'form-control'%>
  </div>

  <%= f.submit class: 'btn btn-primary mt-3' %>
<% end %>