<%= form_with model: board, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :world %>
    <%= f.text_area :world, class: 'form-control', rows: 5 %>
  </div>  
  <div class="form-group">
    <%= f.label :charm %>
    <%= f.text_area :charm, class: 'form-control', rows: 5 %>
  </div>  
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 10 %>
  </div>
  <%= f.submit '布教する', class: 'btn btn-primary my-5' %>
<% end %>