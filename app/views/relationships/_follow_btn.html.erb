<% if current_user.following?(user) %>
  <%= link_to "フォローを外す", user_relationships_path(user.id), data: { turbo_method: :delete }, class: 'btn btn-success' %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), data: { turbo_method: :post }, class: 'btn btn-outline-success' %>
<% end %>